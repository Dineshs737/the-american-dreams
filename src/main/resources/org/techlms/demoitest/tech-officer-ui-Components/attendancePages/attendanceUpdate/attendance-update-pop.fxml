<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="container" alignment="CENTER" spacing="30.0" styleClass="choice-box-container" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.techlms.demoitest.controllers.techOfficerControllers.attendanceController.TechOfficerAttendanceEditPopController">

    <children>
        <!-- Course Selection -->
        <VBox spacing="20.0">
            <children>
                <HBox alignment="CENTER" styleClass="update-student-medical-banner-label-container">
                    <children>
                        <Label styleClass="update-student-medical-banner" text="Update  Student Attendance Record" />
                    </children>
                </HBox>

                <Label styleClass="choice-box-label" text="Select Course" />
            <HBox alignment="CENTER">
               <children>
                      <ChoiceBox fx:id="selectCourse" prefWidth="400.0" />
               </children>
            </HBox>
            </children>
        </VBox>

        <!-- Student ID Input -->
        <HBox alignment="CENTER">
            <children>
                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="medical-label" text="Student ID" />
                        <TextField fx:id="studentId" prefWidth="400.0" styleClass="student-id-input-field" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Attendance Date Selection -->
        <VBox alignment="CENTER" spacing="20.0">
            <children>
            <VBox spacing="10.0">
               <children>
                      <Label styleClass="medical-label" text="Select Attendance Date" />
                  <HBox alignment="CENTER">
                     <children>
                            <DatePicker fx:id="attendanceDate" prefWidth="400.0" styleClass="medical-date-picker-container" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            </children>
        </VBox>

        <!-- Attendance Status -->
        <HBox alignment="CENTER">
            <children>
                <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER" styleClass="update-student-medical-banner-label-container">
                            <children>
                                <Label styleClass="medical-label" text="Attendance Status">
                                    <HBox.margin>
                                        <Insets bottom="20.0" />
                                    </HBox.margin>
                                </Label>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" spacing="50.0">
                            <children>
                                <RadioButton fx:id="present" mnemonicParsing="false" styleClass="medical-label" text="Present" />
                                <RadioButton fx:id="absent" mnemonicParsing="false" styleClass="medical-label" text="Absent" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>

        <!-- Submit Button -->
        <HBox fx:id="buttonContainer" alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#update" styleClass="medical-submit-button" text="Update" />
            </children>
            <VBox.margin>
                <Insets bottom="30.0" top="10.0" />
            </VBox.margin>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <stylesheets>
      <URL value="@../../tech-officer-student-attendance-css.css" />
      <URL value="@../../submit-student-medical-css.css" />
   </stylesheets>
</VBox>
