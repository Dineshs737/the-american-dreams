<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="student-new-grads-page-right-container" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.techlms.demoitest.controllers.lecturerControllers.marks.LecturerStudentMarksPageController">
   <children>
      <HBox alignment="CENTER_RIGHT" styleClass="slection-menu-card" VBox.vgrow="NEVER">
         <children>
            <Button mnemonicParsing="false" onAction="#back" styleClass="back-button" text="Back" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>

      <!-- Attendance Table Section -->
      <VBox stylesheets="@./lecturer-student-grads.css" VBox.vgrow="ALWAYS">
         <children>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="studentMarksTable">
                     <columns>
                        <TableColumn fx:id="studentId" editable="false" minWidth="150.0" sortable="false" text="StudentID" />
                        <TableColumn fx:id="studentName" editable="false" minWidth="250.0" sortable="false" text="StudentName" />
                        <TableColumn fx:id="quiz1" editable="false" minWidth="100.0" sortable="false" text="Quiz 01" />
                        <TableColumn fx:id="quiz2" editable="false" minWidth="100.0" sortable="false" text="Quiz 02" />
                        <TableColumn fx:id="quiz3" editable="false" minWidth="100.0" sortable="false" text="Quiz 03" />
                        <TableColumn fx:id="quiz4" editable="false" minWidth="100.0" sortable="false" text="Quiz 04" />
                        <TableColumn fx:id="assignment1" editable="false" minWidth="120.0" sortable="false" text="Assignment 01" />
                        <TableColumn fx:id="assignment2" editable="false" minWidth="120.0" sortable="false" text="Assignment 02" />
                        <TableColumn fx:id="midterm" editable="false" minWidth="100.0" sortable="false" text=" Midterm" />
                        <TableColumn fx:id="finalTheory" editable="false" minWidth="120.0" sortable="false" text="Final theory" />
                        <TableColumn fx:id="finalPractical" editable="false" minWidth="120.0" sortable="false" text="Final  practical" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <VBox alignment="CENTER" spacing="20.0" styleClass="student-new-grads-page-right-container" stylesheets="@lecturer-student-new-marks-css.css" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#submitMarks" styleClass="lecturer-marks-page-button" text="Submit Student Marks" />
                        <Button mnemonicParsing="false" onAction="#updateMarks" styleClass="lecturer-marks-page-button" text="Update Student Marks" />
                        <Button mnemonicParsing="false" onAction="#deleteMarks" styleClass="lecturer-marks-page-button" text="Delete Student Marks" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@../../tech-officer-ui-Components/tech-officer-student-attendance-css.css" />
      <URL value="@lecturer-student-new-marks-css.css" />
   </stylesheets>
</VBox>
