<VBox fx:id="medicalContainer" alignment="CENTER" styleClass="choice-box-container" stylesheets="@lecturer-marks-submit-pop.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.techlms.demoitest.controllers.lecturerControllers.marks.LecturerUpdateStudentMarks">
   <children>
      <VBox alignment="CENTER" spacing="30.0" styleClass="container" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" styleClass="update-student-medical-banner-label-container">
                     <children>
                        <Label styleClass="update-student-medical-banner" text="Update Student Marks" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="CENTER">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="medical-label" text="Select exam" />
                        <ChoiceBox fx:id="examSelection" prefWidth="400.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
      
                  <HBox alignment="CENTER" />
            <HBox alignment="CENTER" layoutX="30.0" layoutY="77.0">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="medical-label" text="Student Id" />
                        <TextField fx:id="studentId" prefWidth="400.0" styleClass="student-id-input-field" />
                     </children>
                  </VBox>
               </children>
            </HBox>
      
            <HBox alignment="CENTER">
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <Label styleClass="medical-label" text="Student marks" />
                        <TextField fx:id="marks" prefWidth="400.0" styleClass="student-id-input-field" />
                     </children>
                  </VBox>
               </children>
            </HBox>
      
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#updateMarks" styleClass="medical-submit-button" text="Update" />
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
