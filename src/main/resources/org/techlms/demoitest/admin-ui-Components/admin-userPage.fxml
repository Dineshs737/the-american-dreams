                                       <children>
                                          <VBox maxHeight="150.0" maxWidth="150.0">
                                             <children>
                                                <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                                                   <image>
                                                      <Image url="@../application-images/adminUIImages/delete-user-data.png" />
                                                   </image>
                                                </ImageView>
                                             </children>
