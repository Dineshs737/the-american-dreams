<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="container" alignment="CENTER" spacing="20.0" styleClass="choice-box-container" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.techlms.demoitest.controllers.techOfficerControllers.TechnicalOfficerStudentFindMedicalRecord">
    <children>
        <HBox alignment="CENTER" styleClass="update-student-medical-banner-label-container">
            <children>
                <Label styleClass="update-student-medical-banner" text="Delete Course" />
            </children>
        </HBox>
        <HBox alignment="CENTER">
            <children>
                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="medical-label" text="Course Code" />
                        <TextField fx:id="studentId" prefWidth="400.0" styleClass="student-id-input-field" />
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox fx:id="findMedicalRecord" alignment="CENTER" layoutX="10.0" layoutY="10.0">
            <children>
                <VBox spacing="10.0" />
                <Button mnemonicParsing="false" onAction="#findMedicalRecord" styleClass="medical-submit-button" text="Delete">
               <HBox.margin>
                  <Insets bottom="30.0" />
               </HBox.margin></Button>
            </children>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </HBox>
    </children>
   <stylesheets>
      <URL value="@../tech-officer-ui-Components/submit-student-medical-css.css" />
      <URL value="@../tech-officer-ui-Components/tech-officer-student-attendance-css.css" />
   </stylesheets>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
