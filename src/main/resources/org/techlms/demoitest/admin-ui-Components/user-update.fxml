<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="updateUserCard" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <!-- Password -->
        <HBox alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="user-profile-label" text="User password" />
                        <TextField fx:id="password" prefWidth="400.0" promptText="User password" styleClass="user-profile-text-field">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </TextField>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Phone Number -->
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <VBox>
                    <children>
                        <Label styleClass="user-profile-label" text="Contact number" />
                        <TextField fx:id="phoneNumber" prefWidth="400.0" promptText="Phone number" styleClass="user-profile-text-field">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </TextField>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Gender -->
        <HBox alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="user-profile-label" text="Gender" />
                        <TextField fx:id="gender" prefWidth="400.0" promptText="Gender" styleClass="user-profile-text-field">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </TextField>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Department -->
        <HBox alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="user-profile-label" text="Department" />
                        <TextField fx:id="department" prefWidth="400.0" promptText="Department" styleClass="user-profile-text-field">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </TextField>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Address -->
        <HBox alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="user-profile-label" text="Address" />
                        <TextField fx:id="address" prefWidth="400.0" promptText="Address" styleClass="user-profile-text-field">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </TextField>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Email -->
        <HBox alignment="CENTER">
            <children>
                <VBox>
                    <children>
                        <Label styleClass="user-profile-label" text="Email" />
                        <TextField fx:id="email" prefWidth="400.0" promptText="Email" styleClass="user-profile-text-field">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </TextField>
                    </children>
                </VBox>
            </children>
        </HBox>

              <!-- Select User Profile -->
        <HBox alignment="CENTER">
            <children>
                <VBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" text="Select user profile" />
               </children>
                </VBox>
            </children>
        </HBox>

        <!-- Buttons -->
        <HBox alignment="CENTER">
            <VBox.margin>
                <Insets bottom="20.0" top="10.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <VBox>
                    <children>
                        <HBox spacing="40.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#createUser" styleClass="user-profile-button" text="Update user">
                                    <padding>
                                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                    </padding>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#cancleMenu" text="Cancel">
                                    <padding>
                                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                    </padding>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
   <padding>
      <Insets top="20.0" />
   </padding>
</VBox>
