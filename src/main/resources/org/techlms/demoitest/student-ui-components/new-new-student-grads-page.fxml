<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../tech-officer-ui-Components/tech-officer-student-attendance-css.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.techlms.demoitest.controllers.studentControllers.StudentGradsPageController">
   <children>

      <!-- Attendance Table Section -->
      <VBox stylesheets="@student-attendance.css" VBox.vgrow="ALWAYS">
         <children>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="studentMarksTable" HBox.hgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="courseCode" editable="false" minWidth="200.0" sortable="false" text="CourseCode" />
                        <TableColumn fx:id="courseName" editable="false" minWidth="250.0" sortable="false" text="Course Name" />
                        <TableColumn fx:id="grades" editable="false" minWidth="100.0" sortable="false" text="Grades" />
                        <TableColumn fx:id="GPA" editable="false" minWidth="150.0" sortable="false" text="GPA" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <VBox alignment="CENTER" spacing="20.0" styleClass="student-new-grads-page-right-container" stylesheets="@student-new-marks-css.css" HBox.hgrow="NEVER">
                     <children>
                        <HBox alignment="CENTER" spacing="30.0">
                           <children>
                              <Label styleClass="student-new-grads-page-right-container-label" text="Yours SGPA :" />
                              <Label fx:id="SGPA" styleClass="student-new-grads-page-right-container-label" text="Label" />
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" spacing="30.0">
                           <children>
                              <Label styleClass="student-new-grads-page-right-container-label" text=" Yours CGPA  :" />
                              <Label fx:id="CGPA" styleClass="student-new-grads-page-right-container-label" text="Label" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
