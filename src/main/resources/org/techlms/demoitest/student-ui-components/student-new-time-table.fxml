<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../tech-officer-ui-Components/tech-officer-student-attendance-css.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.techlms.demoitest.controllers.studentControllers.StudentNewTimeTableController">
   <children>

      <!-- Attendance Table Section -->
      <VBox stylesheets="@student-attendance.css" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="timeTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="timeSlot" editable="false" minWidth="200.0" sortable="false" text="Time" />
                  <TableColumn fx:id="monday" editable="false" minWidth="200.0" sortable="false" text="Monday" />
                  <TableColumn fx:id="tuesday" editable="false" minWidth="150.0" sortable="false" text="Tuesday" />
                  <TableColumn fx:id="wednesday" editable="false" minWidth="150.0" sortable="false" text="Wednesday" />
                  <TableColumn fx:id="thursday" editable="false" minWidth="150.0" sortable="false" text="Thursday" />
                  <TableColumn fx:id="friday" editable="false" minWidth="200.0" sortable="false" text="Friday" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
