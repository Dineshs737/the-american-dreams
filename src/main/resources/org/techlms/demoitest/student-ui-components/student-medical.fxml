<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.techlms.demoitest.controllers.studentControllers.StudentMedicalController">
   <children>
      <Label styleClass="course-name-profile" text="Upload Medical Document" />

      <HBox alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <Label styleClass="user-profile-label" text="Medical PDF" />
                  <Button fx:id="pdfSelectButton" mnemonicParsing="false" onAction="#selectMedical" prefWidth="400.0"
                          styleClass="medical-pdf-open-button" text="Select your medical PDF" />
               </children>
            </VBox>
         </children>
      </HBox>

      <HBox alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <Label styleClass="user-profile-label" text="Medical Start Date" />
                  <DatePicker fx:id="medicalStartDate" prefWidth="400.0" styleClass="medical-date-picker" />
               </children>
            </VBox>
         </children>
      </HBox>

      <HBox alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <Label styleClass="user-profile-label" text="Medical End Date" />
                  <DatePicker fx:id="medicalEndDate" prefWidth="400.0" styleClass="medical-date-picker" />
               </children>
            </VBox>
         </children>
      </HBox>

      <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#submitMedical" styleClass="user-profile-button" text="Submit" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets top="20.0" left="20.0" right="20.0" bottom="20.0" />
   </padding>
</VBox>
