<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" styleClass="profile-left-card" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" styleClass="my-course-message">
         <children>
            <Label styleClass="course-name-profile" text=" Course material" />
         </children>
      </HBox>

      <TableView fx:id="examRegistration" pickOnBounds="false" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="materialTopic" editable="false" prefWidth="200.0" sortable="false" text="Course Code" />
            <TableColumn fx:id="topicDate" editable="false" prefWidth="200.0" sortType="DESCENDING" sortable="false" text="Course Name" />
            <TableColumn fx:id="topicDescription" editable="false" minWidth="-1.0" prefWidth="100.0" sortable="false" text="Course Credit" />
            <TableColumn fx:id="resource" editable="false" prefWidth="200.0" sortable="false" text=" Registration" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
